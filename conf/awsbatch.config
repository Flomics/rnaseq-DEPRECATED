/*
 * -------------------------------------------------
 *  Nextflow config file for running on AWS batch
 * -------------------------------------------------
 * Base config needed for running with -profile awsbatch
 */

params {
  config_profile_name = 'AWSBATCH'
  config_profile_description = 'AWSBATCH Cloud Profile'
  config_profile_contact = 'Bioinformatics Flomics, S.L. team (bioinformatics@flomics.com)'
  region = "eu-west-1"
  tracedir = './'
  kraken2_db = 's3://flomics-no-backup/references/covid19_stratus_files/kraken2_db/'
  awsqueue = 'default-gwfcore'
}
aws.region = params.awsregion
process.executor = 'awsbatch'
process.queue = params.awsqueue
aws.batch.cliPath = '/home/ec2-user/miniconda/bin/aws'
workDir = 's3://flomics-scratch/tmp/github_actions'
